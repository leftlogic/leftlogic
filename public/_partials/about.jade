li#name
  .about_avatar
    .about_overlay
  .about_content
    h2= fullname
    h4= title
    p= about
    .social
      if twitter
        a(href="http://twitter.com/#{ twitter }"): i.icon-twitter @#{ twitter }
      if github
        a(href="http://github.com/#{ github }"): i.icon-github @#{ github }
      if blog
        a(href="#{ blog }"): i.icon-blog #{ blog.replace(/^http:../, '') }
